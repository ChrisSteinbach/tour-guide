{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // .tool_input.notebook_path // empty' | xargs -r npx prettier --write --ignore-unknown 2>/dev/null"
          }
        ]
      }
    ]
  }
}
